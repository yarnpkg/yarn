$ErrorActionPreference = 'Stop'; # stop on all errors
$packageName = 'yarn'
$packageArgs = @{
  packageName = $packageName
  softwareName = 'Yarn*'
  fileType = 'msi'
  silentArgs = "/qn /norestart /l*v `"$env:TEMP\chocolatey\$($packageName)\$($packageName).MsiInstall.log`""
  validExitCodes = @(0, 3010, 1641)
  checksumType = 'sha256'

  #url = 'https://yarndev.dan.cx/windows/yarn-{VERSION}.msi'
  #url = 'https://yarnpkg.com/downloads/yarn-{VERSION}.msi'
  url = 'https://github.com/yarnpkg/yarn/releases/download/v{VERSION}/kpm-v{VERSION}.msi'
  checksum = '{CHECKSUM}'
}

Install-ChocolateyPackage @packageArgs
