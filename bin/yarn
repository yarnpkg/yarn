#!/bin/sh
argv0=$(echo "$0" | sed -e 's,\\,/,g')
basedir=$(dirname "$(readlink "$0" || echo "$argv0")")
node=''

case "$(uname -s)" in
  Darwin) basedir="$( cd "$( dirname "$argv0" )" && pwd )";;
  Linux) basedir=$(dirname "$(readlink -f "$0" || echo "$argv0")");;
  *CYGWIN*|*MSYS*) basedir=$(cygpath -w "$basedir") is_cygwin=1;;
esac

command_exists() {
  command -v "$1" >/dev/null 2>&1;
}

is_tty() {
  [ -t 0 ] && [ -t 1 ];
}

if command_exists node; then
  node=node
# Debian and Ubuntu use "nodejs" as the name of the binary, not "node", so we
# search for that too. See:
# https://lists.debian.org/debian-devel-announce/2012/07/msg00002.html
# https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=614907
elif command_exists nodejs; then
  node=nodejs
else
  >&2 echo 'Yarn requires Node.js 4.0 or higher to be installed.'
  exit 1
fi

# A "good" tty for Cygwin/MSYS is a bad tty for win32-node (which needs conhost)
if [ "$YARN_FORCE_WINPTY" = 1 ] || is_tty && [ "$is_cygwin" = 1 ] && command_exists winpty; then
  node="winpty $node"
fi

exec $node "$basedir/yarn.js" "$@"
